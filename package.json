{
  "name": "edge-error",
  "version": "1.0.0",
  "description": "Create errors custom stack trace pointing to the Edge source file",
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test": "japa",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "commit": "git-cz",
    "prepublishOnly": "npm run build",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile"
  },
  "keywords": [
    "edge",
    "edge.js"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.7",
    "@types/node": "^10.5.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "mrm": "^1.2.0",
    "pkg-ok": "^2.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "japaFile.js"
    ],
    "extension": [
      ".ts"
    ]
  },
  "dependencies": {},
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/edge-error.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/edge-error/issues"
  },
  "homepage": "https://github.com/poppinss/edge-error#readme"
}
